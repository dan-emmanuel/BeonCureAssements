{
  "compilerOptions": {
    
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "es2019",
    "sourceMap": true,
    "outDir": "./dist",
   "baseUrl": "./src",
    "paths": {
       "*": ["*"]
      // ... any other paths you want to set up
    },
    "incremental": true,
   
    "resolveJsonModule": true,
    "skipLibCheck": true
    
  },
}
